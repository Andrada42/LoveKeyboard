<Window x:Class="LoveKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoveKeyboard"
        mc:Ignorable="d"
        Title="LoveKeyboard" Height="450" Width="800"
        Background="Black"
        WindowStyle="None"
        AllowsTransparency="True"
    >
    <Border
        Background="#F2D0BB"
        BorderBrush="#946C54"
        BorderThickness="2"
    >
        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="30" Background="#F2D0BB">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LoveKeyboard" Foreground="#704123" FontSize="16" FontWeight="bold" VerticalAlignment="Center"
                        Margin="10,0"/>
                    <!-- Minimize Button -->
                    <Button Grid.Column="1" Content="_" Width="30" Click="MinimizeButton_Click"/>
                    <!-- Maximize/Restore Button -->
                    <Button Grid.Column="2" Content="□" Width="30" Click="MaximizeButton_Click"/>
                    <!-- Close Button -->
                    <Button Grid.Column="3" Content="X" Width="30" Background="Red" Foreground="White" Click="CloseButton_Click"/>
            </Grid>
            <Grid>
                <TextBox 
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        FontSize="18"/>
            </Grid>
        </DockPanel>
    </Border>
</Window>
